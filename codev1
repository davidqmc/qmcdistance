<html>
<head>
    <title>Distance Calculator</title>
    <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA9LzTmuuiOPSQyq15jZ1iRz2ZwYYIygpk&callback=initMap">
    </script>
</head>
<body>
    <div id="distance-box">
        <label for="origin">Origin:</label>
        <input type="text" id="origin" />
        <label for="destination">Destination:</label>
        <input type="text" id="destination" />
        <button onclick="calculateDistance()">Calculate Distance</button>
        <p id="distance-result"></p>
    </div>
    <script>
        // Function to calculate distance using Distance Matrix API
        function calculateDistance() {
            // Replace with your logic to get origin and destination values from inputs
            var origin = document.getElementById("origin").value;
            var destination = document.getElementById("destination").value;

            // Distance Matrix API request setup
            var service = new google.maps.DistanceMatrixService();
            var request = {
                origins: [origin],
                destinations: [destination],
                travelMode: 'driving', // Change travelMode if needed (e.g., 'bicycling')
                unitSystem: google.maps.UnitSystem.METRIC // Change unitSystem if needed (e.g., google.maps.UnitSystem.IMPERIAL)
            };

            service.getDistanceMatrix(request, callback);
        }

        // Function to handle Distance Matrix API response
        function callback(response, status) {
            if (status == 'OK') {
                var distance = response.rows[0].elements[0].distance.text;
                document.getElementById("distance-result").innerHTML = "Distance: " + distance;
            } else {
                document.getElementById("distance-result").innerHTML = "Error: " + status;
            }
        }
    </script>
</body>
</html>
